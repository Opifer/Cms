{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3333/",
            // "runtimeArgs": [
            //     "--remote-debugging-port=9222"
            // ],
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "sourceMapPathOverrides": {
                "webpack:///*": "${webRoot}/*" // Example: "webpack:///src/app.js" -> "/users/me/project/src/app.js"
            },
            "diagnosticLogging": true
        }
    ]
}