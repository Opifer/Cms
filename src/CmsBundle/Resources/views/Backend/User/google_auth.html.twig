{% extends 'OpiferCmsBundle:Backend:base.html.twig' %}

{% block body %}
<div class="page-header">
    <div class="container">
        <h1 class="pull-left">Confirm your Google Authentication</h1>
    </div>
</div>

<div class="container page-body">
    <div class="row">
        {{ form_start(form, {'style': 'horizontal'}) }}
            {{ form_widget(form) }}
            <input type="hidden" value="{{ secret }}" name="secret" />
            <div class="form-group">
                <label for="_auth_code" class="col-sm-2 control-label">
                    QR code
                </label>
                <div class="col-sm-10">
                    <img src={{ qrUrl }}>
                </div>
            </div>
            <div class="form-group">
                <label for="_auth_code" class="col-sm-2 control-label">
                    Manual input
                </label>
                <div class="col-sm-10">
                    {{ secret }}
                </div>
            </div>
            <div class="form-group form-footer">
                <div class="col-xs-12">
                    <button class="btn btn-default" type="submit">{{ 'form.submit'|trans|capitalize }}</button>
                    <a href="{{ path('opifer_cms_user_index') }}" class="btn btn-link">{{ 'button.cancel'|trans|capitalize }}</a>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock body %}
