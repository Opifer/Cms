{% extends '@OpiferCms/Backend/base.html.twig' %}

{% block body %}
    {% set mfa = "inactive" %}
    {% if user.googleAuthenticatorSecret|length %}
        {% set mfa = "active" %}
    {% endif %}
    <section class="container">
        <div class="page-header clearfix">
            <h1 class="pull-left">
                Edit user "{{ user.username }}"
                <small>Two factor is <strong>{{ mfa }}</strong></small>
            </h1>
        </div>

        <div class="row">
            {% include '@OpiferCms/Backend/User/_form.html.twig' %}
        </div>
    </section>
{% endblock body %}
