{% extends 'OpiferCmsBundle:Backend:base.html.twig' %}

{% block body %}
    {% set mfa = "inactive" %}
    {% if user.googleAuthenticatorSecret|length %}
        {% set mfa = "active" %}
    {% endif %}
    <section class="container">
        <div class="row">
            <div class="page-header clearfix">
                <h1 class="pull-left">
                    Edit your profile
                    <small>Two factor is <strong>{{ mfa }}</strong></small>
                </h1>
            </div>

            <div class="row">
                {{ form_start(form, {'style': 'horizontal'}) }}
                {{ form_widget(form) }}

                <div class="form-group form-footer">
                    <div class="col-xs-12">
                        <button class="btn btn-default" type="submit">{{ 'form.submit'|trans|capitalize }}</button>
                        <a href="{{ path('opifer_cms_user_index') }}" class="btn btn-link">{{ 'button.cancel'|trans|capitalize }}</a>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </section>
{% endblock body %}
