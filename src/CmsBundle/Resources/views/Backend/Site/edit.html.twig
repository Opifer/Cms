{% extends '@OpiferCms/Backend/base.html.twig' %}

{% block body %}
    <div class="page-header">
        <div class="container">
            <span class="caption">{{ 'title.site'|trans|capitalize }}</span>
            <a href="{{ path('opifer_cms_site_index') }}" class="btn btn-link pull-right">
                <i class="material-icons">public</i> {{ 'title.sites'|trans }}
            </a>
