{% extends '@OpiferCms/Backend/base.html.twig' %}

{% block body %}
    {% spaceless %}
        <div class="page-header clearfix">
            <a href="{{ path('opifer_redirect_redirect_create') }}" class="btn btn-link pull-right">
                <i class="material-icons">add</i> {{ 'button.add'|trans|capitalize }}
            </a>
            <h1 class="pull-left">{{ 'base.redirects'|trans|capitalize }}</h1>
        </div>

        <div class="container">
            <div class="row">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Origin</th>
                            <th>Target</th>
                            <th>Permanent</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for redirect in redirects %}
                            <tr>
                                <td>{{ redirect.id }}</td>
                                <td>{{ redirect.origin }}</td>
                                <td>{{ redirect.target }}</td>
                                <td>{{ redirect.permanent }}</td>
                                <td>
                                    <a href="{{ path('opifer_redirect_redirect_edit', {'id': redirect.id}) }}"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('opifer_redirect_redirect_delete', {'id': redirect.id}) }}"><i class="fa fa-remove"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endspaceless %}
{% endblock body %}
