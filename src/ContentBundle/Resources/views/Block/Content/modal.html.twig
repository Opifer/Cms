<div class="modal" tabindex="-1" role="dialog" {{ manage_tags() }} {% if manage|default %}style="position: relative; display: block;"{% endif %}>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        {{ block.title }}{{ block.header|parse|raw }}{{ render_placeholder(0, 'header') }} <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        {{ block.value|parse|raw }}{{ render_placeholder(1, 'body') }}
      </div>
      <div class="modal-footer">
        {{ block.footer|parse|raw }}{{ render_placeholder(2, 'footer') }}
      </div>
    </div>
  </div>
</div>