{% extends '@OpiferContent/base.html.twig' %}

{% block opifer_content_body %}
    {% spaceless %}

        <div class="container">
            <div class="row">

                <div class="page-header">
                    <h1>{{ "title.block_shared"|trans }}</h1>
                </div>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in shared %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.displayname }}</td>
                            <td>
                                <a href="{{ path('opifer_content_item_edit', {'id': item.id}) }}"><i class="fa fa-edit"></i> Edit</a>
                                <a href="{{ path('opifer_content_item_delete', {'id': item.id}) }}"><i class="fa fa-remove"></i> Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endspaceless %}
{% endblock opifer_content_body %}
