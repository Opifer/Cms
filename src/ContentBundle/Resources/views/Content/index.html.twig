{% extends '@OpiferContent/base.html.twig' %}

{% block opifer_content_body %}
    {% spaceless %}
        <div class="page-header clearfix">
            <a href="{{ path('opifer_content_content_create') }}" class="btn btn-default pull-right">
                {{ 'button.add'|trans }}
            </a>
            <h1>{{ "title.content"|trans }}</h1>
        </div>

        <div class="js-content-browser"></div>

        <div class="modal modal-delete fallin" id="{{ 'modalDelete' ~ slug|default|capitalize }}" tabindex="-1" role="dialog" aria-labelledby="DeleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="DeleteModalLabel">{{ 'modal.delete.title'|trans|capitalize }}</h4>
                    </div>
                    <div class="modal-body"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default btn-link" data-dismiss="modal">{{ 'action.cancel'|trans|capitalize }}</button>
                        <a href="#" class="btn btn-danger modal-confirm-button" title="Confirms removal">{{ 'action.delete'|trans|capitalize }}</a>
                    </div>
                </div>
            </div>
        </div>
    {% endspaceless %}
{% endblock opifer_content_body %}
