<div {{ manage_tags() }}>
    <fieldset class="form-group">
        <legend>{{ block.properties.label|default('Label') }}</legend>
        {% for option in block.properties.options|default([]) %}
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="optionsRadios" value="{{ option.key }}" {% if loop.first %}checked{% endif %}>
                    {{ option.value }}
                </label>
            </div>
        {% endfor %}
        {% if block.properties.helpText|default %}
            <small class="form-text text-muted">{{ block.properties.helpText }}</small>
        {% endif %}
    </fieldset>
</div>
