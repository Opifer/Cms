<div {{ manage_tags() }}>
    {% if subscribed %}
        <div class="alert alert-success">{{ block.properties.responseMessage|default|raw }}</div>
    {% endif %}
    {{ form_start(form, {'style': 'inline'}) }}
    <div class="input-group">
        {{ form_widget(form.email) }}
        <span class="input-group-btn">
            <button class="btn btn-primary btn-submit" type="submit">{{ 'button.subscribe' | trans }}</button>
        </span>
    </div>
    {{ form_end(form) }}
</div>