{% extends 'OpiferContentBundle::base.html.twig' %}

{% block opifer_content_body %}

    <section class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8 col-md-offset-2">
                <div class="page-header clearfix">
                    <h1>{{ 'title.new_content'|trans }}</h1>
                </div>
                {{ form_start(form, {'attr' : { 'novalidate' : 'novalidate' }, 'style': 'horizontal' }) }}
                {% set form_save_btn = form_widget(form.save) %}
                {{ form_rest(form) }}
                <div class="form-group">
                    <div class="col-xs-12 col-lg-10 col-lg-offset-2">
                        {{ form_save_btn|raw }}
                        <a href="{{ path('opifer_content_content_index') }}" class="btn btn-default">{{ 'button.cancel'|trans|capitalize }}</a>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock opifer_content_body %}

{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}
